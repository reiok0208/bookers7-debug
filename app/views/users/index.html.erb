<!--検索機能-->
<%= form_tag(search_path, :method => "get") do %>
<%= text_field(@search_content, :search_word)%>
<%= select(@search_content, :search_what, [["User","User"], ["Book","Book"]])%>
<%= select(@search_content, :search_method, [["部分一致","partial_match"], ["完全一致","perfect_match"], ["前方一致","forward_match"], ["後方一致","backward_match"]])%>
<%= submit_tag "Search" ,class: "button is-info"%> 
<% end %> 
<!--検索機能-->

<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<h2>User info</h2>
			<%= render 'users/profile', user: current_user %>
			<!--メモ　右側の指定に注意。そこを間違えるとエラーが発生して表示されない -->

			<h2>New book</h2>
			<%= render 'books/newform', book: @book %>
		</div>

		<div class="col-xs-9">
			<h2>Users</h2>
			<!--users一覧 -->
			<table class="table">
				<thead>
					<tr>
						<th>image</th>
						<th>name</th>
						<th>follow</th>
						<th>follower</th>
						<th colspan="3"></th>
					</tr>
				</thead>

				<tbody>
					<% @users.each do |user| %>
					<tr>
						<td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
						<td><%= user.name%></td>
						<th><%= user.followings.count %></th>
						<th><%= user.followers.count %></th>
						
						<td><% if current_user != user %>
							<% if user.followed_by?(current_user) %>
							<p><%=link_to "フォロー中", user_relationships_path(user.id), method: :delete, class: "btn btn-success col-xs-6" %></p>
							<% else %>
							<p><%=link_to "フォロー", user_relationships_path(user.id), method: :post, class: "btn btn-primary col-xs-6" %></p>
							<% end %>
							<% end %></td>
							<td><%= link_to "Show", user, class: "user_#{user.id}" %></td>
						</tr>
						<% end %>
					</tbody>
				</table>
				<!--users一覧 -->
			</div>
		</div>
	</div>

